<?xml version="1.0" encoding="utf-8"?>
<s:MobileApplication xmlns:fx="http://ns.adobe.com/mxml/2009" 
					 xmlns:s="library://ns.adobe.com/flex/spark" 
					 firstView="com.detager.mobile.views.SignInView"
					 creationComplete="mobileapplication_creationCompleteHandler(event)">
	
	<fx:Script>
		<![CDATA[
			import com.detager.mobile.configs.RemoteServiceConfig;
			import com.detager.mobile.events.ChangeViewEvent;
			import com.riaspace.un.events.ContextPropertyChangeEvent;
			
			import mx.events.FlexEvent;

			protected function mobileapplication_creationCompleteHandler(event:FlexEvent):void
			{
				$.service.configure(RemoteServiceConfig);
				$.listen(ChangeViewEvent.CHANGE_VIEW, switchView_eventHandler);
			}

			protected function switchView_eventHandler(event:ChangeViewEvent):void
			{
				navigator.pushView(event.viewClass, event.data);
			}

		]]>
	</fx:Script>

</s:MobileApplication>
